    "description": {
      "type": "richtext"
    },
    "services_offered": {
      "type": "component",
      "repeatable": true,
      "component": "shared.bullet-item"
    },
    "who_we_support": {
      "type": "component",
      "repeatable": true,
      "component": "shared.bullet-item"
    },
    "highlights": {
      "type": "component",
      "repeatable": true,
      "component": "shared.bullet-item"
    },
    "related_industries": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::industry.industry"
    }
  }
